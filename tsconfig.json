{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "CommonJS",
    "target": "ES2020"
  },
  "exclude": [
    "src/**/*.test.ts"
  ]
}